<Page x:Class="GrBritainRadel.pages.StoreStroka"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GrBritainRadel.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StoreStroka">

    <Grid Background="White">
        <ListBox Width="800" Height="450" x:Name="lstboxStore" HorizontalAlignment="Center" VerticalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Width="60" Height="80" Source="{Binding photo_product}"/>
                        <StackPanel Margin="5" >
                            <TextBlock Margin="2" FontSize="20" Text="" TextWrapping="Wrap" Width="Auto" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Название:" FontSize="14"/>
                                <TextBlock FontSize="14" Text="{Binding name_product}" Margin="5,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Стоимость:" FontSize="14"/>
                                <TextBlock FontSize="14" Text="{Binding price_product}" Margin="5,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Количество:" FontSize="14"/>
                                <TextBlock FontSize="14" Text="{Binding count_product}" Margin="5,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Page>
